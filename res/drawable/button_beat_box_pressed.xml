<?xml version="1.0" encoding="utf-8"?>

<!-- Layer List Drawable with red Round Shape Drawable.
Used when button is PRESSED (non-normal state) -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="@color/red"/>

        </shape>
    </item>
    <item>
        <shape android:shape="oval">

            <stroke
                android:width="4dp"
                android:color="@color/dark_red"/>

        </shape>
    </item>
</layer-list>
